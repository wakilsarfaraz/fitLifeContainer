{
  "name": "Django + Djongo Dev Container",
  "dockerFile": "Dockerfile",
  "appPort": [8000],
  "postCreateCommand": "mongod --fork --logpath /var/log/mongodb.log --dbpath /var/lib/mongodb",
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "ms-python.vscode-pylance"]
    }
  },
  "remoteUser": "root",
  "mounts": [
    "source=mongo-data,target=/var/lib/mongodb,type=volume"
  ]
}

